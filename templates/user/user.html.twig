{% extends 'base.html.twig' %}

{% block title %}Hello UserController!{% endblock %}

{% block body %}

<div class="container-fluid">
    {# <div>
        <a href="{{ path('app_add_user') }}" class='btn btn-primary my-3' >Ajouter user</a>
    </div> #}
    <div class="row justify-content-between g-5">
        <div class="overflow-scroll">
            <h2 class="text-center text-muted my-3" >Liste des users</h2>
            <table class="table">
                <thead>
                    <tr>
                    <th scope="col">#</th>
                    <th scope="col">Nom</th>
                    <th scope="col">Prenom</th>
                    <th scope="col">Adresse</th>
                    <th scope="col">Ville</th>
                    <th scope="col">Code Postal</th>
                    <th scope="col">Email</th>
                    <th scope="col">Telephone</th>
                    <th scope="col">Salaire</th>
                    <th scope="col">Service</th>
                    <th scope="col">Date de naissance</th>
                    <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for user in liste_users %}
                    <tr>
                        <th>{{ user.getId}}</th>
                        <td>{{ user.getNom() }}</td>
                        <td>{{ user.getPrenom() }}</td>
                        <td>{{ user.getAdresse() }}</td>
                        <td>{{ user.getVille() }}</td>
                        <td>{{ user.getCp() }}</td>
                        <td>{{ user.getEmail() }}</td>
                        <td>{{ user.getTel() }}</td>
                        <td>{{ user.getSalaire() }}</td>
                        <td>{{ user.getService() }}</td>
                        <td>{{ user.getDateNaissance|date("m/d/Y") }}</td>
                        {# Below is how to add parameter to a href link #}
                        <td class='d-flex align-items-center' >
                            <a href="{{ path('app_detail_user', { 'id': user.getId() }) }}" class='btn btn-sm btn-dark' title='voir details'><i class="fa-solid fa-circle-info"></i></a>
                            |
                            <a href="{{ path('app_message_new', { 'id': user.getId() }) }}" class='btn btn-sm btn-success' title='envoyez un message'><i class="fa-solid fa-message"></i></a>
                            |
                            <a href="{{ path('app_edit_user', { 'id': user.getId() }) }}" class='btn btn-sm btn-primary' title='editer le profil'><i class="fa-solid fa-pen"></i></a>
                            | 
                            <a onclick="return confirm('Are you sure?')" href="{{ path('app_remove_user', { 'id': user.getId() }) }}" class='btn btn-sm btn-danger' title='supprimer utilisateur'><i class="fa-solid fa-trash-can"></i></a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <hr>
        <div class="row">
            <div class='col-6 mx-auto mb-5'>
                <h2 class="text-center text-muted my-3" >Ajouter un user</h2>
                {{ form_start(form) }}
                <div class="row">
                    <div class="col-6">
                        {{ form_row(form.nom) }}
                    </div>
                    <div class="col-6">
                        {{ form_row(form.prenom) }}
                    </div>
                </div>

                <div class="row">
                    <div class="col-6">{{ form_row(form.email) }}</div>
                    <div class="col-6">{{ form_row(form.tel) }}</div>
                </div>

                <div class="row">
                    <div class="col">
                        {{ form_row(form.adresse) }}
                    </div>
                </div>

                <div class="row">
                    <div class="col-8">
                        {{ form_row(form.ville) }}
                    </div>
                    <div class="col-4">
                        {{ form_row(form.cp) }}
                    </div>
                </div>

                <div class="row">
                    <div class="col-6">{{ form_row(form.salaire) }}</div>
                    <div class="col-6">{{ form_row(form.service) }}</div>
                </div>

                <div class="row">
                    <div class="col">
                        {{ form_row(form.date_naissance) }}
                    </div>
                </div>
                <input type="submit" value="ajouter" class='btn btn-dark' >
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>

{% endblock %}
